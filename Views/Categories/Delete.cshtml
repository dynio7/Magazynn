@model Magazyn.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuwanie Kategorii</h1>

<h3>Na pewno chcesz usunąć tę kategorię? Zmiany będą nieodwracalne.</h3>
<div>
    <h4>Kategorie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label label for="Name">Nazwa</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-outline-danger" /> 
        <button type="button" class="btn btn-outline-warning"><a asp-action="Index">Powrót</a></button>
    </form>
</div>
