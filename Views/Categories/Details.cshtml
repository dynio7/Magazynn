@model Magazyn.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły Kategorii</h1>

<div>
    <h4>Kategorie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            
            <label label for="Name">Nazwa</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <button type="button" class="btn btn-outline-secondary"><a asp-action="Edit" asp-route-id="@Model?.Id">Edycja</a></button>
    <button type="button" class="btn btn-outline-warning"><a asp-action="Index">Powrót</a></button>
</div>
